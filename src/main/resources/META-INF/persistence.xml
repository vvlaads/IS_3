<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
               https://jakarta.ee/xml/ns/persistence
               https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="PersistenceUnit" transaction-type="JTA">

        <jta-data-source>java:jboss/datasources/labs</jta-data-source>

        <!-- Сущности -->
        <class>lab.data.Coordinates</class>
        <class>lab.data.Location</class>
        <class>lab.data.Movie</class>
        <class>lab.data.Person</class>
        <class>lab.data.util.Operation</class>

        <properties>
            <!-- Управление схемой -->
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="none"/>

            <!-- Hibernate логирование -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>

    </persistence-unit>
</persistence>
